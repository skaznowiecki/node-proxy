{
  "name": "@skaznowiecki/node-proxy",
  "version": "1.0.1",
  "description": "A lightweight, zero-dependency, configuration-driven HTTP/HTTPS proxy server with TLS termination, load balancing, and virtual hosts",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "bin": {
    "node-proxy": "./dist/app.js"
  },
  "files": [
    "dist/**/*",
    "!dist/__tests__/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "prepublishOnly": "npm run build && npm run test:run",
    "daemon:start": "tsx src/app.ts start --rules rules.json",
    "daemon:stop": "tsx src/app.ts stop",
    "daemon:restart": "tsx src/app.ts restart --rules rules.json",
    "daemon:status": "tsx src/app.ts status",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\" \"*.json\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skaznowiecki/node-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/skaznowiecki/node-proxy/issues"
  },
  "homepage": "https://github.com/skaznowiecki/node-proxy#readme",
  "keywords": [
    "proxy",
    "reverse-proxy",
    "http-proxy",
    "https",
    "tls",
    "ssl",
    "load-balancer",
    "virtual-host",
    "routing",
    "server",
    "typescript",
    "zero-dependency"
  ],
  "author": "Sergio Kaznowiecki",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^4.0.16"
  }
}
